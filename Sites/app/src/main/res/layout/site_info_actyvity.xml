<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="id:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="ID"
            android:id="@+id/site_info_id"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="name:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="NAME"
            android:id="@+id/site_info_name"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="url:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="URL"
            android:id="@+id/site_info_url"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="uniq_url:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="UNIQ_URL"
            android:id="@+id/site_info_uniq_url"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="domain:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="DOMAIN"
            android:id="@+id/site_info_domain"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="govbody_name:"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="GOVBODYNAME"
            android:id="@+id/site_info_govbady_name"/>
        </LinearLayout>

</LinearLayout>
</ScrollView>